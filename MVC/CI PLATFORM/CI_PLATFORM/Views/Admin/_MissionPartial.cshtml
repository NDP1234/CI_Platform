@using CI_Platform.Entities.Models.VM
@model AdminViewModel;


<div class="table-responsive">
    <table class="table table-borderless DataTablesId" id="DataTablesIdForMission" style="width:100%">
        <thead>
            <tr class="bg-light">
                <th scope="col">Mission Title</th>
                <th scope="col">Mission Type</th>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Missions.Where(m => m.DeletedAt == null))
            {
                <tr class="border">
                    <td>@item.Title</td>
                    <td>@item.MissionType</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>
                        <button class="border-0 bg-white EditMissionDetailBtn" id="EditMissionDetailBtn" data-mission-id="@item.MissionId"><i class="bi bi-pencil-square "></i></button>


                        <button class="border-0 bg-white TrashMissionDetail" id="DeleteBtnForMission" data-mission-id="@item.MissionId"><i class="bi bi-trash  "></i></button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
