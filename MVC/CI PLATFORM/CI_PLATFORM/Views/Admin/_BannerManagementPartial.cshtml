@using CI_Platform.Entities.Models.VM
@model AdminViewModel;


<div class="table-responsive ">
    <table class="table table-borderless DataTablesId" id="DataTablesIdForBanner" style="width:100%">
        <thead>
            <tr class="bg-light">
                <th scope="col">Banner Id</th>
                <th scope="col">Sort Order</th>
                <th scope="col">Banner Name</th>
                <th scope="col">Image</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BannerList.Where(b => b.DeletedAt == null))
            {
                <tr class="border">
                    <td>@item.BannerId</td>
                    <td>@item.SortOrder</td>
                    <td>@item.Text</td>
                    <td> <a target="_blank" href="@item.Image">View</a></td>
                    <td>
                        <button class="border-0 bg-white " data-banner-id="@item.BannerId" onclick="EditBannerDetails('@item.BannerId','@item.Text', '@item.SortOrder', '@item.Image')"><i class="bi bi-pencil-square "></i></button>


                        <button class="border-0 bg-white trashBanner" id="trashBanner" data-banner-id="@item.BannerId"><i class="bi bi-trash  "></i></button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>