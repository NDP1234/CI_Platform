@using CI_Platform.Entities.Models.VM
@model AdminViewModel;


 @if (TempData["error1"] != null)
                    {
                        <div class="alert alert-danger" id="alert-message1">
                            @TempData["error1"]
                        </div>
                    }
@if (TempData["success1"] != null){
                        <div class="alert alert-success" id="alert-message2">
                            @TempData["success1"]
                        </div>
                    }

<div class="table-responsive">
    <table class="table table-borderless DataTablesId" id="DataTablesIdForMissionTheme" style="width:100%">
        <thead>
            <tr class="bg-light">
                <th scope="col">Title</th>
                <th scope="col">Status</th>
                <th scope="col" class="text-center">Action</th>

            </tr>
        </thead>
        <tbody >
            
            @foreach (var item in Model.MissionThemes.Where(m => m.DeletedAt == null))
            {
                <tr class="border">
                    <td>@item.Title</td>
                    @if (@item.Status == 1)
                    {
                        <td class="greentext">Active</td>
                    }
                    else
                    {
                        <td class="redtext">Inactive</td>
                    }

                    <td class="text-center">
                        <button class="border-0 bg-white editMissionThemeModal" type="button" data-missionTheme-id="@item.MissionThemeId" onclick="OpenEditThemeModal('@item.Title','@item.Status','@item.MissionThemeId')"><i class="bi bi-pencil-square "></i></button>
                        <button class="border-0 bg-white deleteMissionTheme" data-missionTheme-id="@item.MissionThemeId"><i class="bi bi-trash  "></i></button>
                    </td>

                </tr>

            }
        </tbody>
    </table>
  
  

</div>
<script>
//for visible alert message till 5 seconds
setTimeout(function () {
    $('#alert-message1').fadeOut('fast');

}, 5000);
setTimeout(function () {
    $('#alert-message2').fadeOut('fast');

}, 5000);
</script>